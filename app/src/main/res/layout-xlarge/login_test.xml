<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginPage"
    android:background="@drawable/test2">

    <Button
        android:onClick="main_login"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Login"
        android:id="@+id/main_login"
        android:background="@drawable/btn_background_login_register"
        android:textSize="50dp"
        android:layout_above="@+id/main_register"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/main_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/main_name"
        android:hint="Username"
        android:layout_above="@+id/main_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/test3"
        android:textSize="50dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/main_password"
        android:hint="Password"
        android:layout_above="@+id/main_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/test3"
        android:layout_marginBottom="20dp"
        android:textSize="50dp" />

    <Button
        android:onClick="main_register"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Register"
        android:id="@+id/main_register"
        android:background="@drawable/btn_background_login_register"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="319dp"
        android:layout_alignEnd="@+id/main_login"
        android:layout_marginTop="20dp" />

    <ImageView android:src="@drawable/mr_logo"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/main_name" />

    <ImageView
        android:src="@drawable/fork"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView7"
        android:layout_alignTop="@+id/main_register"
        android:layout_alignParentStart="true"
        android:layout_marginTop="118dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="200dp" />

    <ImageView
        android:src="@drawable/fork"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView8"
        android:layout_alignTop="@+id/imageView7"
        android:layout_alignEnd="@+id/main_register"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignParentStart="true"
        android:layout_marginRight="200dp" />
</RelativeLayout>